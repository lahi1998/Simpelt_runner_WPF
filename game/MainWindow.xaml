<Window x:Class="game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game"
        mc:Ignorable="d"
        Title="Endless Runner Game" Height="450" Width="800">
    <Canvas x:Name="MyCanvas" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp" Background="LightBlue">

        <Rectangle x:Name="background" Height="400" Width="1262" Fill="Orange" Canvas.Left="0" />
        <Rectangle x:Name="background2" Height="400" Width="1262" Fill="LightGreen" Canvas.Left="1262" />

        <Rectangle Name="ground" Height="32" Width="792" Fill="Black" Canvas.Top="387" Canvas.Left="0"/>

        <Rectangle Name="player" Height="99" Width="60" Fill="Brown" Canvas.Top="151" Canvas.Left="110" />

        <Rectangle Name="obstacle" Height="178" Width="50" Fill="red" Canvas.Top="320" Canvas.Left="721" />

        <Rectangle Name="barrel" Height="70" Width="50" Fill="DarkRed" Canvas.Top="320" Canvas.Left="1200" />

        <Label Name="scoretext" FontSize="32" FontWeight="bold" Content="score: 0" />

    </Canvas>
</Window>
